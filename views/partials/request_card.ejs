<!-- 
  ===========  Card Partial ============= 
  DESC: 
  Creates a template card to which the input
  of different request information will be
  placed

  PARAMETERS: 
  None

  RETURNS:
  A card instance
  ===========================
-->
<div class="card rounded-3 shadow border-dark mb-3">
  <div
    class="card-header"
    style="
      font-weight: bold;
      font-size: large;
      white-space: nowrap;
      font-size: larger;
    "
  >
    <div class="row no-gutters">
      <div class="col-8">
        <% if(request.title === "") { %> No item name was listed <% } else { %>
        <%= request.title %> <% } %>
      </div>
      
      <div class="col text-end">
        <% if (editable) { %>
          <a class="btn btn-primary btn-sm" role="button" href="/home/my_postings/edit_request/<%= request._id %>">
            Edit listing
          </a>
          <button id="<%= request._id %>" class="delete_request" class="btn btn-primary btn-sm" role="button">
            Delete listing
          </button>
        <% } %>
      </div>
    </div>
  </div>
  <!-- ============================= -->

  <div class="card-body">
    <!-- ===== Drop down for description of listing ====== -->
    <p>
      <button
        class="btn btn-primary btn-sm"
        type="button"
        data-bs-toggle="collapse"
        data-bs-target="#<%= request._id %>"
        aria-expanded="false"
        aria-controls="descriptionCollapse"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="16"
          height="16"
          fill="currentColor"
          class="bi bi-file-text"
          viewBox="0 0 16 16"
        >
          <path
            d="M5 4a.5.5 0 0 0 0 1h6a.5.5 0 0 0 0-1H5zm-.5 2.5A.5.5 0 0 1 5 6h6a.5.5 0 0 1 0 1H5a.5.5 0 0 1-.5-.5zM5 8a.5.5 0 0 0 0 1h6a.5.5 0 0 0 0-1H5zm0 2a.5.5 0 0 0 0 1h3a.5.5 0 0 0 0-1H5z"
          />
          <path
            d="M2 2a2 2 0 0 1 2-2h8a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V2zm10-1H4a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h8a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1z"
          />
        </svg>
        See more info
      </button>

      <a class="btn btn-primary btn-sm" role="button" href="/chat/<%= request.user %>">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="16"
          height="16"
          fill="currentColor"
          class="bi bi-chat-left-text"
          viewBox="0 0 16 16"
        >
          <path
            d="M14 1a1 1 0 0 1 1 1v8a1 1 0 0 1-1 1H4.414A2 2 0 0 0 3 11.586l-2 2V2a1 1 0 0 1 1-1h12zM2 0a2 2 0 0 0-2 2v12.793a.5.5 0 0 0 .854.353l2.853-2.853A1 1 0 0 1 4.414 12H14a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z"
          />
          <path
            d="M3 3.5a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 0 1h-9a.5.5 0 0 1-.5-.5zM3 6a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 0 1h-9A.5.5 0 0 1 3 6zm0 2.5a.5.5 0 0 1 .5-.5h5a.5.5 0 0 1 0 1h-5a.5.5 0 0 1-.5-.5z"
          />
        </svg>
        Message about item
      </a>
    </p>
    <div class="collapse" id="<%= request._id %>">
      <div class="card card-body">
        <div class="mb-2">
          <small class="text-muted">Category: </small>
          <% if (request.category === "") { %> No Category 
          <% } else { %>
          <%= request.category %> 
          <% } %>
        </div>
        <% if(request.desc === "") { %> No description was listed 
        <% } else { %>
        <%= request.desc %> 
        <% } %>
      </div>
    </div>
    <!-- ================================================= -->
  </div>
  <div class="card-footer">
    <!-- *************************************** INFOMATION OF LISTING ***********************************************************************-->
    <!-- ===== TIME LISTED ===== -->
    <svg
      xmlns="http://www.w3.org/2000/svg"
      width="16"
      height="16"
      fill="currentColor"
      class="bi bi-clock-history"
      viewBox="0 0 16 16"
    >
      <path
        d="M8.515 1.019A7 7 0 0 0 8 1V0a8 8 0 0 1 .589.022l-.074.997zm2.004.45a7.003 7.003 0 0 0-.985-.299l.219-.976c.383.086.76.2 1.126.342l-.36.933zm1.37.71a7.01 7.01 0 0 0-.439-.27l.493-.87a8.025 8.025 0 0 1 .979.654l-.615.789a6.996 6.996 0 0 0-.418-.302zm1.834 1.79a6.99 6.99 0 0 0-.653-.796l.724-.69c.27.285.52.59.747.91l-.818.576zm.744 1.352a7.08 7.08 0 0 0-.214-.468l.893-.45a7.976 7.976 0 0 1 .45 1.088l-.95.313a7.023 7.023 0 0 0-.179-.483zm.53 2.507a6.991 6.991 0 0 0-.1-1.025l.985-.17c.067.386.106.778.116 1.17l-1 .025zm-.131 1.538c.033-.17.06-.339.081-.51l.993.123a7.957 7.957 0 0 1-.23 1.155l-.964-.267c.046-.165.086-.332.12-.501zm-.952 2.379c.184-.29.346-.594.486-.908l.914.405c-.16.36-.345.706-.555 1.038l-.845-.535zm-.964 1.205c.122-.122.239-.248.35-.378l.758.653a8.073 8.073 0 0 1-.401.432l-.707-.707z"
      />
      <path d="M8 1a7 7 0 1 0 4.95 11.95l.707.707A8.001 8.001 0 1 1 8 0v1z" />
      <path
        d="M7.5 3a.5.5 0 0 1 .5.5v5.21l3.248 1.856a.5.5 0 0 1-.496.868l-3.5-2A.5.5 0 0 1 7 9V3.5a.5.5 0 0 1 .5-.5z"
      />
    </svg>
    <% const time = request.timeID; %> 
    <% const now = new Date(); %> 
    <% const left = now.getTime() - request.timeID; %> 
    <% let daysLeft = Math.floor(left / 86400000); %> 
    <% if (daysLeft === 0) { %>
    <small class="text-muted">Created today</small>
    <% } else { %>
    <small class="text-muted">Created <%= daysLeft %> days ago</small>
    <% } %>
  </div>
</div>
