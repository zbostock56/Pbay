<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head'); %>
  </head>
  <body>
    <header><%- include('../partials/header'); %></header>
    <main>
      <div class="main">
        <div
          id="category_page"
          class="container"
          style="padding-top: 120px; position: relative; min-height: 100vh"
        >
          <%- include('../partials/filter_selection'); %>
          <div id="listing_display" class="<%= category.replace(/ /g,"_") %>">
            <h1 class="mb-3">
              All <%= category %> listings
            </h1>
            <div id="cards" class="row row-cols-1 row-cols-md-1 g-1">
              <% let counter = 0; %>
              <% listings.forEach((listing) => { %>
              <%   counter++; %>
              <div class="col" style="padding-bottom: 3vh;">
                <%- include('../partials/card', {listing: listing, editable: false, CATEGORIES: CATEGORIES }); %>
                </div>
              <% }); %>          
            </div>
            <%- include('../partials/load_more_listings'); %>
            <%- include('../partials/no_listings'); %>
          </div>

          <div id="request_display">
            <h1 class="mb-3">
              All <%= category %> requests
            </h1>
            <div id="request_cards" class="row row-cols-1 row-cols-md-1 g-1">
              <% counter = 0; %>
              <% requests.forEach((request) => { %>
              <%   counter++; %>
              <div class="col" style="padding-bottom: 3vh;">
                <%- include('../partials/request_card', {request: request, editable: false, CATEGORIES: CATEGORIES }); %>
                </div>
              <% }); %>
            </div>
            <%- include('../partials/load_more_requests'); %>
            <%- include('../partials/no_requests'); %>
          </div>
        </div>
      </div>
    </main>
    <footer><%- include('../partials/footer'); %></footer>
    <!-- 
      ***** JavaScript Add-Ons *****
      DESC:
      -> Add the necessary resources
      for Bootstrap. Includes scripting
      for transitions/animations
     -->
    <%- include('../partials/scripts'); %>
  </body>
</html>