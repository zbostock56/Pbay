<!-- 
  ===========  create_post.ejs ============= 
  DESC:
  View for creating a post to be posted

  PARAMETERS:
  None

  RETURNS:
  A create_post instance
  ===========================
-->

<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head'); %>
  </head>
  <body>
    <header><%- include('../partials/header'); %></header>
    <main>
      <div class="main">
        <h1>Create Your Listing</h1>
        <div class="mb-3">
          <div class="row">
            <div class="col">
              <label for="title" class="form-label">Name of Product</label>
              <input
                class="form-control"
                type="text"
                placeholder="Be Descriptive!"
                aria-label="title_input"
                id="title"
              />
            </div>
            <div class="col">
              <label for="tags" class="form-label">Category Tag</label>
              <input
                class="form-control"
                type="text"
                placeholder="Give a broad category in one word (e.g. electronics)"
                aria-label="title_input"
                id="title"
              />
            </div>
          </div>
        </div>
        <div class="mb-3">
          <label for="file-input" class="form-label">Upload a Picture</label>
          <input type="file" class="form-control" id="file-input" />
        </div>
        <div class="mb-3">
          <label for="description" class="form-label"
            >Give a Description of the Product</label
          >
          <textarea
            class="form-control"
            id="description"
            rows="4"
            placeholder="Talk about why you're selling it, what condition its in,
          ect."
            aria-label="Description-input"
          ></textarea>
        </div>
        <div class="input-group mb-3">
          <label for="Price-Input" class="form-label"
            >Enter an Asking Price</label
          >
          <span class="input-group-text">$</span>
          <input
            type="text"
            id="Price-Input"
            class="form-control"
            aria-label="Price-Input"
            placeholder="0.00"
          />
          <div class="form-check">
            <input
              class="form-check-input"
              type="checkbox"
              value=""
              id="flexCheckDefault"
            />
            <label class="form-check-label" for="flexCheckDefault">
              Post item as free (any price posted will be removed if checked)
            </label>
          </div>
        </div>
      </div>
    </main>
    <footer><%- include('../partials/footer'); %></footer>
    <!-- 
      ***** JavaScript Add-Ons *****
      DESC:
      -> Add the necessary resources
      for Bootstrap. Includes scripting
      for transitions/animations
     -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
  </body>
  <footer></footer>
</html>
