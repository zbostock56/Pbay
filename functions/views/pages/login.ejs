<!-- 
  ===========  login.ejs (Login Page) ============= 
  DESC:
  Creates the login page to link to the authentication
  for purdue domain checking

  PARAMETERS:
  None

  RETURNS:
  Login Page
  ================================================
-->

<!-- 
  ********* Jumbotron Class **********
  DESC:
  -> Current placeholder for login 
  with background of Parker's picture
  -> Cannot currently load based on 
  created paths
  *******************************
 -->
<!DOCTYPE html>
<html lang="en">
  <head style="padding-top: 0vh">
    <%- include('../partials/head'); %>
  </head>
  <body>
    <main>
      <div class="main" style="background-image: url(images/login_bg.png)">
        <section class="vh-100">
          <div class="container py-5 h-100">
            <div
              class="row d-flex justify-content-center align-items-center h-100"
            >
              <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card shadow-2-strong" style="border-radius: 1rem">
                  <div class="card-body p-5 text-center">
                    <h3 class="mb-5"><b>Welcome to pBay</b></h3>
                    <button
                      class="btn btn-primary btn-lg btn-block"
                      type="submit"
                    >
                      Login
                    </button>
                    <div style="padding-top: 40px">
                      <b
                        ><i
                          >Make sure to sign in with your Purdue email
                          account!</i
                        ></b
                      >
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </section>
      </div>
    </main>
    <!-- 
      ***** JavaScript Add-Ons *****
      DESC:
      -> Add the necessary resources
      for Bootstrap. Includes scripting
      for transitions/animations
     -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
